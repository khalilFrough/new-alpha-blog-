<%=render 'shared/errors', obj: @category%>

<div class= "row">
    <div class="col-md-12">
        <%= form_for @category do |f| %>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label"><%= f.label :name,"Category Name"%></div>
            <div class="col-sm-8">
              <%= f.text_field :name, class: "form-control", placeholder: "enter a name", autuofocus: true%>
            </div>
          </div> 

            <br>
            <div class="form-group row">
            <div class="col-sm-12 center">
                <%= f.submit class:"btn btn-primary btn-lg"%>
            </div>
        </div>

        <% end %>    
    </div>
</div>