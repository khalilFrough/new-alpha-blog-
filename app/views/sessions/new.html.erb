 <h1 align="center"> Log in</h1>

 <%= form_for(:session ,url: login_path) do |f| %>
   
<!--second--> 
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :email%></div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autuofocus: true%>
      </div>
    </div> 
<!--end of second--> 
<!--thrid--> 
  <div class="form-group row">
      <div class="col-sm-2 col-form-label"><%= f.label :password%></div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control",placeholder:"Enter password", autocomplete: "off"%>
    </div>
  </div> 
  <!--end of third--> 
      <br>
      <div class="form-group row">
      <div class="col-sm-12 center">
          <%= f.submit "log in", class:"btn btn-primary btn-lg"%>
      </div>
  </div>

  <% end %>  