<% if @article.errors.any?%>
    <h3 class="alert alert-danger">The following errors stopped Article from saving</h3>
    <ul>
        <% @article.errors.full_messages.each do |msg|%>
            <li> <%= msg%></li>
        <% end %>
    </ul>
<% end %>

<div class= "row">
    <div class="col-md-12">
        <%= form_for @article do |f| %>

            <div class="form-group row">
                <div class="col-sm-2 col-form-label">
                     <%= f.label :title %>
                </div>
                <div class="col-sm-8">
                     <%= f.text_field :title, class: "form-control", placeholder: "Article Title", autuofocus: true%>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-2 col-form-label">
                    <%= f.label :description%>
                </div>
                <div class="col-sm-8">
                     <%= f.text_area :description, class: "form-control", rows:10, placeholder: "Body of Artilce", autuofocus:true%>
                <div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-sm-10">
                    <%= f.submit class:"btn btn-primary btn-lg"%>
                </div>
            </div>

        <% end %>    
        <div class=" center col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path%> ]
        </div>
    </div>
</div>